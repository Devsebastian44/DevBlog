---
interface Props {
    title: string;
    description: string;
    image: string;
    category: string;
    date: string;
    readTime: string;
    slug: string;
}

const { title, description, image, category, date, readTime, slug } =
    Astro.props;
const url = `/posts/${slug}`;
---

<article
    class="flex flex-col rounded-xl overflow-hidden bg-background-card shadow-lg hover:-translate-y-1 hover:shadow-primary/10 hover:shadow-xl transition-all duration-300 group cursor-pointer border border-transparent hover:border-primary/20"
>
    <a
        href={url}
        class="w-full h-48 bg-cover bg-center relative block"
        style={`background-image: url("${image}");`}
    >
        <div
            class="absolute inset-0 bg-gradient-to-t from-background-card to-transparent opacity-80"
        >
        </div>
        <span
            class="absolute top-3 left-3 bg-background-dark/80 backdrop-blur-md text-primary text-xs font-bold px-3 py-1 rounded-full border border-primary/20"
        >
            {category}
        </span>
    </a>
    <div class="flex flex-col flex-1 p-5 gap-3">
        <a href={url}>
            <h3
                class="text-white text-xl font-bold leading-tight group-hover:text-primary transition-colors"
            >
                {title}
            </h3>
        </a>
        <p class="text-text-muted text-sm line-clamp-2">
            {description}
        </p>
        <div
            class="mt-auto pt-4 flex items-center justify-between border-t border-[#224249]/50"
        >
            <span class="text-text-muted text-xs font-mono"
                >{date} â€¢ {readTime}</span
            >
            <a
                href={url}
                class="material-symbols-outlined text-primary text-[20px] group-hover:translate-x-1 transition-transform"
            >
                arrow_forward
            </a>
        </div>
    </div>
</article>
