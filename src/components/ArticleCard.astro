---
interface Props {
    title: string;
    description: string;
    image: string;
    category: string;
    author: string;
    authorImage?: string;
    date: string;
    readTime: string;
    featured?: boolean;
    slug?: string;
}

const {
    title,
    description,
    image,
    category,
    author,
    authorImage,
    date,
    readTime,
    featured = false,
    slug,
} = Astro.props;

const url = `/posts/${slug}`;
---

{
    featured ? (
        <article class="group relative bg-card-light dark:bg-card-dark rounded-xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 border border-slate-200 dark:border-white/5 mb-8">
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent z-10 pointer-events-none" />
            <div class="aspect-w-16 aspect-h-9 h-96 w-full relative">
                <img
                    src={image}
                    alt={title}
                    class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-700"
                    loading="lazy"
                    decoding="async"
                />
            </div>
            <div class="absolute bottom-0 left-0 p-8 z-20 w-full">
                <div class="flex items-center gap-3 mb-3">
                    <span class="px-3 py-1 rounded-full bg-primary text-background-dark text-xs font-bold uppercase tracking-wider">
                        {category}
                    </span>
                    <span class="text-slate-300 text-xs flex items-center">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="14"
                            height="14"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="mr-1"
                        >
                            <circle cx="12" cy="12" r="10" />
                            <polyline points="12 6 12 12 16 14" />
                        </svg>
                        {readTime}
                    </span>
                </div>
                <a href={url}>
                    <h3 class="text-3xl font-bold text-white mb-2 group-hover:text-primary transition-colors">
                        {title}
                    </h3>
                </a>
                <p class="text-slate-300 mb-4 line-clamp-2 max-w-2xl">
                    {description}
                </p>
                <div class="flex items-center">
                    {authorImage && (
                        <img
                            src={authorImage}
                            alt={author}
                            class="w-8 h-8 rounded-full border-2 border-primary mr-3"
                            loading="lazy"
                            decoding="async"
                        />
                    )}
                    <div class="text-sm">
                        <p class="text-white font-medium">{author}</p>
                        <p class="text-slate-400 text-xs">{date}</p>
                    </div>
                </div>
            </div>
        </article>
    ) : (
        <article class="group flex flex-col h-full bg-card-light dark:bg-card-dark rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 border border-slate-200 dark:border-white/5 hover:border-primary/50">
            <a href={url} class="h-48 overflow-hidden relative block">
                <div class="absolute top-4 left-4 z-10">
                    <span class="px-2 py-1 rounded-md bg-black/60 backdrop-blur-sm text-primary text-xs font-bold border border-primary/30">
                        {category}
                    </span>
                </div>
                <img
                    src={image}
                    alt={title}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    loading="lazy"
                    decoding="async"
                />
            </a>
            <div class="p-6 flex flex-col flex-grow">
                <div class="flex items-center gap-2 text-xs text-slate-500 dark:text-slate-400 mb-3">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="14"
                        height="14"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="mr-1"
                    >
                        <rect
                            width="18"
                            height="18"
                            x="3"
                            y="4"
                            rx="2"
                            ry="2"
                        />
                        <line x1="16" x2="16" y1="2" y2="6" />
                        <line x1="8" x2="8" y1="2" y2="6" />
                        <line x1="3" x2="21" y1="10" y2="10" />
                    </svg>
                    {date}
                    <span class="mx-1">â€¢</span>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="14"
                        height="14"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="mr-1"
                    >
                        <line x1="10" x2="14" y1="2" y2="2" />
                        <line x1="12" x2="12" y1="14" y2="11" />
                        <circle cx="12" cy="14" r="8" />
                    </svg>
                    {readTime}
                </div>
                <a href={url}>
                    <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-3 group-hover:text-primary transition-colors leading-tight">
                        {title}
                    </h3>
                </a>
                <p class="text-slate-600 dark:text-slate-400 text-sm mb-4 line-clamp-3 flex-grow">
                    {description}
                </p>
                <div class="mt-auto pt-4 border-t border-slate-100 dark:border-white/5 flex items-center justify-between">
                    <div class="flex items-center">
                        <span class="text-xs font-medium text-slate-700 dark:text-slate-300">
                            By {author}
                        </span>
                    </div>
                    <a
                        href={url}
                        class="text-primary group-hover:translate-x-1 transition-transform"
                        aria-label="Read more"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <path d="M5 12h14" />
                            <path d="m12 5 7 7-7 7" />
                        </svg>
                    </a>
                </div>
            </div>
        </article>
    )
}
