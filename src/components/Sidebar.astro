---
import { getCollection } from "astro:content";

const allPosts = await getCollection("posts");
const allTags = allPosts.flatMap((post) => post.data.tags || []);
const uniqueTags = [...new Set(allTags)];
// Sort by frequency (simple version: show top 8)
const trendingTags = uniqueTags.slice(0, 8);
---

<aside class="lg:w-1/3 space-y-8">
    <!-- About DevBlog -->
    <div
        class="bg-card-light dark:bg-card-dark rounded-xl p-6 border border-slate-200 dark:border-white/5 shadow-sm"
    >
        <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-4">
            About DevBlog
        </h3>
        <p
            class="text-slate-600 dark:text-slate-400 text-sm mb-4 leading-relaxed"
        >
            DevBlog is a community-driven platform for developers, data
            scientists, and security experts. We share high-quality technical
            content to help you stay ahead.
        </p>
        <div class="flex gap-3">
            <a
                class="w-8 h-8 rounded-full bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-slate-600 dark:text-slate-400 hover:bg-primary hover:text-white transition-colors"
                href="#"
            >
                <span class="text-xs font-bold">X</span>
            </a>
            <a
                class="w-8 h-8 rounded-full bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-slate-600 dark:text-slate-400 hover:bg-primary hover:text-white transition-colors"
                href="#"
            >
                <span class="text-xs font-bold">Gh</span>
            </a>
            <a
                class="w-8 h-8 rounded-full bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-slate-600 dark:text-slate-400 hover:bg-primary hover:text-white transition-colors"
                href="#"
            >
                <span class="text-xs font-bold">In</span>
            </a>
        </div>
    </div>

    <!-- Trending Tags -->
    <div
        class="bg-card-light dark:bg-card-dark rounded-xl p-6 border border-slate-200 dark:border-white/5 shadow-sm"
    >
        <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-4">
            Trending Tags
        </h3>
        <div class="flex flex-wrap gap-2">
            {
                trendingTags.map((tag) => (
                    <a
                        class="px-3 py-1 rounded bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 text-xs font-medium hover:bg-primary hover:text-white transition-colors capitalize"
                        href={`/archive?tag=${tag.toLowerCase()}`}
                    >
                        #{tag}
                    </a>
                ))
            }
        </div>
    </div>

    <!-- Weekly Tech Digest -->
    <div
        class="relative bg-gradient-to-br from-cyan-900 to-background-dark rounded-xl p-6 border border-primary/20 shadow-lg overflow-hidden"
    >
        <div
            class="absolute -top-10 -right-10 w-32 h-32 bg-primary/20 rounded-full blur-3xl"
        >
        </div>
        <h3 class="relative text-lg font-bold text-white mb-2">
            Weekly Tech Digest
        </h3>
        <p class="relative text-slate-300 text-sm mb-4">
            Join 15,000+ developers receiving the best tech news every Monday.
        </p>
        <form class="relative space-y-3">
            <input
                class="w-full bg-black/30 border border-white/10 rounded px-3 py-2 text-white text-sm focus:outline-none focus:border-primary placeholder-slate-500"
                placeholder="email@example.com"
                type="email"
            />
            <button
                class="w-full bg-primary hover:bg-cyan-400 text-background-dark font-bold py-2 rounded text-sm transition-colors shadow-lg shadow-primary/20"
            >
                Subscribe
            </button>
        </form>
    </div>

    <!-- Most Popular -->
    <div
        class="bg-card-light dark:bg-card-dark rounded-xl p-6 border border-slate-200 dark:border-white/5 shadow-sm"
    >
        <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-4">
            Most Popular
        </h3>
        <div class="space-y-4">
            {
                [
                    {
                        category: "Programming",
                        title: "10 CSS Tricks You Wish You Knew Sooner",
                    },
                    {
                        category: "Career",
                        title: "How to Negotiate Your Salary as a Senior Engineer",
                    },
                    {
                        category: "AI",
                        title: "Building a Chatbot with OpenAI API in 15 Minutes",
                    },
                ].map((item, index) => (
                    <>
                        <a class="group block" href="#">
                            <span class="text-primary text-xs font-bold uppercase mb-1 block">
                                {item.category}
                            </span>
                            <h4 class="text-sm font-semibold text-slate-800 dark:text-slate-200 group-hover:text-primary transition-colors">
                                {item.title}
                            </h4>
                        </a>
                        {index < 2 && (
                            <div class="h-px bg-slate-100 dark:bg-slate-800" />
                        )}
                    </>
                ))
            }
        </div>
    </div>
</aside>
