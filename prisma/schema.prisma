datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

/// This model references the internal Supabase auth.users table.
/// You might not be able to interact with it directly via Prisma depending on permissions,
/// but it serves as a reference for the relations.
model Like {
  id        BigInt   @id @default(autoincrement())
  post_slug String
  user_id   String   @db.Uuid
  created_at DateTime @default(now()) @db.Timestamptz(6)

  @@unique([post_slug, user_id])
  @@map("likes")
}

model Comment {
  id        BigInt   @id @default(autoincrement())
  post_slug String
  user_id   String   @db.Uuid
  content   String
  created_at DateTime @default(now()) @db.Timestamptz(6)

  @@map("comments")
}

model Bookmark {
  id        BigInt   @id @default(autoincrement())
  post_slug String
  user_id   String   @db.Uuid
  created_at DateTime @default(now()) @db.Timestamptz(6)

  @@unique([post_slug, user_id])
  @@map("bookmarks")
}
